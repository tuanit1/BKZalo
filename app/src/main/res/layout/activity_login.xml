<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app11"
    tools:context=".activitiy.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:letterSpacing="0.01"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#0466C8"
                />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="550dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:src="@drawable/g_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: 0905111242"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:letterSpacing="0.01"
                android:textStyle="bold"
                android:textColor="#0466C8"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: 123456"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:letterSpacing="0.01"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:textColor="#0466C8"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_edtusername_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:elevation="35dp">

                <EditText
                    android:id="@+id/edt_username_login"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#A2D2FF"
                    android:paddingLeft="20dp"
                    android:hint="Số điện thoại hoặc Email"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#4882B6"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_edtpassword_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                android:elevation="35dp">

                <EditText
                    app:passwordToggleEnabled="true"
                    android:id="@+id/edt_password_login"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:background="#A2D2FF"
                    android:hint="Mật khẩu"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textColorHint="#4882B6" />
            </androidx.cardview.widget.CardView>


            <CheckBox
                android:id="@+id/cb_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi nhớ đăng nhập"
                android:textSize="17dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_blue"
                android:textStyle="bold"
                android:buttonTint="@color/main_blue"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="20dp"
                android:elevation="35dp"
                >

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="#0466C8"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_forgot_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="#0466C8"
                android:textStyle="bold"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/tv_signup_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản? Click here!"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#0466C8"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp">

                <androidx.cardview.widget.CardView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/ic_google"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_google" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="5dp">

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/ic_facebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>