<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app11"
    tools:context=".activitiy.ForgotpassActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:letterSpacing="0.01"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#0466C8"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/forgotpass_nhi" />

    <TextView
        android:id="@+id/tv_nhap_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Hãy nhập email"
        android:textColor="#0466C8"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_edtpw_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="35dp">
        <EditText
            android:id="@+id/edt_phone_forgot"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="#A2D2FF"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColorHint="#4882B6"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="20dp"
        android:elevation="35dp"
        >

        <Button
            android:id="@+id/btn_next_forgot"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="#0466C8"
            android:text="GỬI LINK"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_back_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại trang đăng nhập"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#0466C8"
        android:textSize="17dp"
        android:textStyle="bold"/>

</LinearLayout>